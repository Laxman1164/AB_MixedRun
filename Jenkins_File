pipeline {
    agent any

    environment {
        IMAGE_NAME = 'dockerjmeter'  // Your Docker image
        TEST_REPO  = 'https://github.com/Laxman1164/AB_MixedRun.git'  // Git repo with .jmx files
    }

    stages {
        stage('Checkout Tests') {
            steps {
                // Pull your test scripts from Git
                git branch: 'main', credentialsId: 'Laxman_1122', url: "${TEST_REPO}"
            }
        }

        stage('Run JMeter Tests') {
            steps {
                script {
                    // Run Docker container with volume mapping to workspace
                    bat """
                    docker run --rm ^
                        -v "%WORKSPACE%:/tests" ^
                        ${IMAGE_NAME} ^
                        /opt/apache-jmeter-5.6.3/bin/jmeter ^
                        -n -t /tests/AccountSummary.jmx ^
                        -l /tests/results.jtl
                    """
                }
            }
        }

        stage('Archive Results') {
            steps {
                archiveArtifacts artifacts: 'results.jtl', fingerprint: true
            }
        }
    }
}

